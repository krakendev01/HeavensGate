<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fund_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fund_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:src="@drawable/account"
            >
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/fund_namepro"
            android:layout_width="348dp"
            android:layout_height="51dp"
            android:textSize="25sp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/edt_cus"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:id="@+id/fund_principlepro"
            android:layout_width="348dp"
            android:layout_height="51dp"
            android:textSize="25sp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/edt_cus"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:id="@+id/fund_emailpro"
            android:layout_width="348dp"
            android:layout_height="51dp"
            android:textSize="25sp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/edt_cus"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:id="@+id/fund_phonepro"
            android:layout_width="348dp"
            android:layout_height="51dp"
            android:textSize="25sp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/edt_cus"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Images"
            android:textColor="#131313"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            />

        <ImageView
            android:id="@+id/fund_img_pro"
            android:layout_width="100dp"
            android:layout_height="100dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/fund_pro_Logout_btn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:cornerRadius="8dp"
                android:layout_marginHorizontal="10dp"
                android:text="logout"
                android:layout_height="wrap_content"

                />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fund_pro_update_btn"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cornerRadius="8dp"
            android:text="Update"
            android:layout_height="wrap_content"

            />


        </LinearLayout>
    </LinearLayout>



</FrameLayout>